{# Collage 3x2 - Paragraph type.
Two rows with three columns displaying 6 images.
All collage templates are similar, so if any change is made to this template it should also be made on the other templates. #}

{{ attach_library('coffey/carousel') }}

<div class="collage" {{ attributes }}>
  <div class="row">
    <div id="collageCarouselIdentifier" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active col-md-4">
          {{ content.field_top_left }}
        </div>
        <div class="carousel-item col-md-4">
          {{ content.field_top_middle }}
        </div>
        <div class="carousel-item col-md-4">
          {{ content.field_top_right }}
        </div>
        <div class="carousel-item col-md-4">
          {{ content.field_bottom_left }}
        </div>
        <div class="carousel-item col-md-4">
          {{ content.field_bottom_middle }}
        </div>
        <div class="carousel-item col-md-4">
          {{ content.field_bottom_right }}
        </div>
        {% include '@coffey/includes/carousel-buttons.html.twig' %}
      </div>
      <ol class="carousel-indicators">
        <li data-target="#collageCarouselIdentifier" data-slide-to="0" class="active"></li>
        <li data-target="#collageCarouselIdentifier" data-slide-to="1"></li>
        <li data-target="#collageCarouselIdentifier" data-slide-to="2"></li>
        <li data-target="#collageCarouselIdentifier" data-slide-to="3"></li>
        <li data-target="#collageCarouselIdentifier" data-slide-to="4"></li>
        <li data-target="#collageCarouselIdentifier" data-slide-to="5"></li>
      </ol>
    </div>
  </div>
</div>