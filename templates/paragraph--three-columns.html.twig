{# Three columns - Paragraph type. 
Three columns with a WYSIWYG in each column. #}
<div class="triple-column" {{ attributes }}>
  <div class="row">
    <div class="col-12 col-sm col-md-12 col-lg-4">
      {{ content.field_left_column }}
    </div>
    <div class="col-12 col-sm col-md-12 col-lg-4">
      {{ content.field_content }}
    </div>
    <div class="col-12 col-sm col-md-12 col-lg-4">
      {{ content.field_right_column }}
    </div>
  </div>
</div>