{# This template displays event title, date, time, location, and registration button(s). Should be used on Course pages. #}

{{ attach_library('coffey/flex') }}
{{ attach_library('coffey/events') }}

<article class="row uce">
  <div class="col-12 col-sm-8 col-lg-9">
    {% include '@coffey/includes/events/date.html.twig' %}      
    {% include '@coffey/includes/events/event-title.html.twig' %}
    {% include '@coffey/includes/events/time.html.twig' %}
    {% include '@coffey/includes/events/location.html.twig' %}
  </div>
  <div class="col-12 col-sm-4 col-lg-3 reg">
    {% include '@coffey/includes/events/registration-button.html.twig' %}
  </div>
</article>
